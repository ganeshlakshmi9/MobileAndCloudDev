<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF380">

    <ImageView
        android:id="@+id/list_item_itemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/photo_description"
        android:tint="#FFFFCC"
        android:src="@android:drawable/ic_menu_agenda" />

    <TextView
        android:id="@+id/list_item_textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_item_itemImage"
        android:layout_toRightOf="@+id/list_item_itemImage"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/list_item_textView_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/list_item_textView_name"
        android:layout_toRightOf="@+id/list_item_itemImage"
        android:textSize="13dp"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/list_item_textView_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_above="@+id/list_item_textView_total_price"
        android:layout_alignBottom="@+id/list_item_textView_quantity"
        android:layout_toLeftOf="@+id/list_item_checkbox"
        android:textSize="13dp"
        android:textColor="#000000"/>
    
    <TextView
        android:id="@+id/list_item_textView_total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/list_item_textView_name"
        android:layout_toLeftOf="@+id/list_item_checkbox"
        android:textSize="13dp"
        android:textColor="#000000"/>

    <CheckBox
        android:id="@+id/list_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/list_item_itemImage"
        android:layout_marginRight="15dp"
        android:checked="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"/>

</RelativeLayout>