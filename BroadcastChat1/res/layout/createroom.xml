<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    
    <TextView android:text="@string/room_name_lbl" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/room_textView" android:textAppearance="?android:attr/textAppearanceLarge"></TextView>
    
    <EditText android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/create_room_editText" android:layout_below="@id/room_textView" android:layout_marginTop="20px">
        <requestFocus></requestFocus>
    </EditText>
    
    <Button android:text="@string/create_btn" android:id="@+id/createRoomBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/create_room_editText" android:layout_marginTop="20px"></Button>
    
</RelativeLayout>
